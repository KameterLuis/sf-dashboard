generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FiatType {
  DOLLAR
  EURO
}

enum Network {
  solana
  ethereum
  chainlink
  celestia
  lido
  aptos
  sui
}

enum Ticker {
  SOL
  ETH
  LINK
  TIA
  APT
  LIDO
  SUI
}

enum DatevTransactionType {
  REVENUE
  COGS
  OTHER_OPERATING_INCOME
  OTHER
}

enum TresTransactionType {
  FEES
  OPERATIONS
  OTHER
}

model DatevTransaction {
  id        Int                  @id @default(autoincrement())
  timestamp DateTime
  amount    Decimal
  type      DatevTransactionType
  fiatType  FiatType
}

model FwBalance {
  id        Int      @id @default(autoincrement())
  timestamp DateTime
  amount    Decimal
  fiatType  FiatType
}

model FwTransaction {
  id        Int      @id @default(autoincrement())
  timestamp DateTime
  amount    Decimal
  fiatType  FiatType
}

model AccountBalance {
  id        Int      @id @default(autoincrement())
  timestamp DateTime
  amount    Decimal
  fiatType  FiatType
}

model AccountTransaction {
  id        Int      @id @default(autoincrement())
  timestamp DateTime
  amount    Decimal
  fiatType  FiatType
}

model TresTransaction {
  id          Int                 @id @default(autoincrement())
  timestamp   DateTime
  tokenAmount Decimal
  fiatAmount  Decimal
  network     Network
  ticker      Ticker
  type        TresTransactionType
}

model TresBalance {
  id           Int      @id @default(autoincrement())
  timestamp    DateTime
  tokenBalance Decimal
  fiatBalance  Decimal
  ticker       Ticker
  network      Network
}
